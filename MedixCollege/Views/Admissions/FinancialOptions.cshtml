@{
    Layout = "~/Views/Admissions/_AdmissionsLayout.cshtml";
}

@{
    ViewBag.Title = "Financial Options - Medix College";
    ViewBag.PageDescription = "Learn more about the Financial options available to attend Medix College.";
}

<div class="col-sm-12 no-padding botMARG">
    <h1 class="contentPageH1">FINANCIAL OPTIONS</h1>
    <ol class="breadcrumb">
        <li class="contentp">@Html.ActionLink("Home", "Index", "Home")</li>
        <li class="contentp">@Html.ActionLink("Admissions", "Index", "Admissions")</li>
        <li class="contentp">@Html.ActionLink("Financial Options", "FinancialOptions", "Admissions")</li>
        <li class="active contentp">Financing Options</li>
    </ol>
    <img class="img-responsive" width="100%" src="~/Content/images/admissions-fo.jpg" alt="hand using a calculator." />
</div>


<div class="col-sm-8 mid-padding">

    <div class="panel panel-default">
        <div class="panel-body">
            <p class="contentp">
                A post­secondary education is a big investment. Fortunately, we at Medix have a dedicated

                team to assist students with financing their education. There are many payment options

                available to Medix students. A brief description of some financing options available is outlined

                below.</p>

            
            <p class="contentH2"><span class="glyphicon glyphicon-info-sign"></span>&nbsp;Financial assistance may be available for those who qualify. Please contact us for more details regarding Financial Assistance.</p>           
        </div>
    </div>



    <div class="panel panel-default">
        <div class="panel-body">
            <h1 class="contentH1">FINANCIAL OPTIONS INCLUDE:</h1><hr class="hrp" />
            <p class="contentp">@Html.ActionLink("Ontario Student Assistance Program (OSAP)", "OSAP", "Admissions")</p>
            <hr class="hrp" />
            <p class="contentp">@Html.ActionLink("Second Careers", "SecondCareers", "Admissions")</p>
            <hr class="hrp" />
            <p class="contentp">@Html.ActionLink("Out of Province", "OutOfProvinceStudents", "Admissions")</p>
            <hr class="hrp" />
            <p class="contentp">@Html.ActionLink("Student Lines of Credit", "StudentLinesOfCredit", "Admissions")</p>
            <hr class="hrp" />
            <p class="contentp">@Html.ActionLink("Lifelong Learning Plan", "LifelongLearningPlan", "Admissions")</p>
            <hr class="hrp" />
            <p class="contentp">@Html.ActionLink("RESP", "RegisteredEducationSavingsPlans", "Admissions")</p>
            <hr class="hrp" />
            <p class="contentp">@Html.ActionLink("Employment Ontario", "EmploymentOntario", "Admissions")</p>
            <hr class="hrp" />
            <p class="contentp">@Html.ActionLink("Monthly Payment Plan", "Index", "Admissions")</p>

        </div>
    </div>
    <button type="button" class="btn btn-default btn-lg btn-block contentH2"><span class="glyphicon glyphicon-send"></span>&nbsp;&nbsp;@Html.ActionLink("GO TO PROGRAM DIRECTORY", "AllPrograms", "Programs")</button>
    <br />
    <button type="button" class="btn btn-default btn-lg btn-block contentH2"><span class="glyphicon glyphicon-map-marker"></span>&nbsp;&nbsp;@Html.ActionLink("GO TO CAMPUS DIRECTORY", "Index", "Campuses")</button>
    <br />
</div>

<div class="col-sm-4 pull-right no-padding">
    <div class="panel panel-default bluePANEL2">

        <div class="panel-body">
            @Html.Partial("_AskAQuestionForm", new ViewDataDictionary { { "postAction", "/home/askquestionprogram" } })
        </div>

    </div>

</div>