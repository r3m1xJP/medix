@{
    Layout = "~/Views/Admissions/_AdmissionsLayout.cshtml";
}
@{
    ViewBag.Title = "Registered Education Savings Plans - Financial Options - Medix College";
    ViewBag.PageDescription = "Learn more about the Registered Education Savings Plans as a financial option to attend Medix College";
}


<div class="col-sm-12 no-padding botMARG">
    <h1 class="contentPageH1">REGISTERED EDUCATION SAVINGS PLANS</h1>
    <ol class="breadcrumb">
        <li class="contentp">@Html.ActionLink("Home", "Index", "Home")</li>
        <li class="contentp">@Html.ActionLink("Admissions", "Index", "Admissions")</li>
        <li class="contentp">@Html.ActionLink("Financial Options", "FinancialOptions", "Admissions")</li>
        <li class="active contentp">Registered Education Savings Plans</li>
    </ol>
    <img class="img-responsive" width="100%" src="~/Content/images/admissions-resp.jpg" alt="man in suit shaking hands with woman" />
</div>

<div class="col-sm-8 mid-padding">

    <div class="panel panel-default">
        <div class="panel-body">
            <p class="contentp">
                Students who have been named a beneficiary under a family members Registered Education Savings Plan (RESP),
                may use funds from the RESP to finance their education.
            </p>
        </div>
    </div>

    <button type="button" class="btn btn-default btn-lg btn-block contentH2"><span class="glyphicon glyphicon-send"></span>&nbsp;&nbsp;@Html.ActionLink("GO TO PROGRAM DIRECTORY", "AllPrograms", "Programs")</button>
    <br />
    <button type="button" class="btn btn-default btn-lg btn-block contentH2"><span class="glyphicon glyphicon-map-marker"></span>&nbsp;&nbsp;@Html.ActionLink("GO TO CAMPUS DIRECTORY", "Index", "Campuses")</button>
    <br />

</div>

<div class="col-sm-4 pull-right no-padding">
    <div class="panel panel-default bluePANEL2">

        <div class="panel-body">
            @Html.Partial("_AskAQuestionForm", new ViewDataDictionary { { "postAction", "/home/askquestionprogram" } })
        </div>

    </div>

</div>