@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <div class="leftMenuWrapper col-lg-3 custom-collapse">
        <button class="btn-brand-white collapse-toggle visible-xs" type="button" data-toggle="collapse" data-parent="custom-collapse" data-target="#side-menu-discover">
            <span class=""><span class="glyphicon glyphicon-fullscreen"></span></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>

            
        </button>
        
        <ul class="leftMenu list-unstyled collapse" id="side-menu-discover">
            <li class="item contentH1-white">@Html.ActionLink("Discover Medix", "Index", "DiscoverMedix")</li>
            <li class="item side-menu-h2">@Html.ActionLink("Medix History", "History", "DiscoverMedix")</li>
            <li class="item side-menu-h2">@Html.ActionLink("Virtual Tours", "Index", "DiscoverMedix")</li>
            <li class="item side-menu-h2">@Html.ActionLink("Laptop Initiative", "LaptopInitiative", "DiscoverMedix")</li>
            <li class="item side-menu-h2">@Html.ActionLink("Transcript Request", "TranscriptRequest", "DiscoverMedix")</li>
            <li class="item side-menu-h2">@Html.ActionLink("Careers at Medix", "Index", "DiscoverMedix")</li>
            <li class="item side-menu-h2">@Html.ActionLink("Online Store", "Index", "DiscoverMedix")</li>
            <li class="item side-menu-h2">@Html.ActionLink("Medix Photos", "Index", "DiscoverMedix")</li>
            <li class="item side-menu-h2">@Html.ActionLink("Medix Videos", "Index", "DiscoverMedix")</li>
    
            <li class="item btn btn-brand btn-block spacer-top" id="askQuestion">Ask a Question</li>
            <li class="item btn btn-brand btn-block" id="requestCatalogue">Request Information</li>
            <li class="item btn btn-brand btn-block" id="applyOnline">Apply Online</li>
        </ul>
        <br />
    </div>
    <div class="col-lg-9">
        <div class="contentHeader">
            @ViewBag.HeaderTitle
        </div>
        <div class="contentBody">
            @RenderBody()
        </div>
    </div>
    <div class="clearfix"></div>

    <script>
        $(document).ready(function () {
            $('#applyOnline').click(function () {
                $('.popup-form-wrapper').hide();
                $('#applyNowWrapper').show();
                $('.form-overlay').slideDown()
            });

            $('#requestCatalogue').click(function () {
                $('.popup-form-wrapper').hide();
                $('#requestCatalogueWrapper').show();
                $('.form-overlay').slideDown()
            });

            $('#askQuestion').click(function () {
                $('.popup-form-wrapper').hide();
                $('#askQuestionWrapper').show();
                $('.form-overlay').slideDown()
            });
        });
    </script>
