        <li class="item">@Html.ActionLink("FIRST AID & CPR", "FirstAidCPR", "Certificates")</li>
        <li class="item">@Html.ActionLink("FOOD HANDLER SAFETY", "FoodHandlerSafety", "Certificates")</li>
        <li class="item">@Html.ActionLink("HOME CHILDCARE MANAGEMENT", "HomeChildCareManagement", "Certificates")</li>
        <li class="item">@Html.ActionLink("INTRAMUSCULAR INJECTIONS", "IntramuscularInjections", "Certificates")</li>
