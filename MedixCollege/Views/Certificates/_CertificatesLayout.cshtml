@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<br />

<div class="container">
    <div class="heroWrapper">
        @ViewBag.HeroText
    </div>
    <div class="leftMenuWrapper col-sm-3 custom-collapse">
        <button class="btn-brand-white collapse-toggle visible-xs" type="button" data-toggle="collapse" data-parent="custom-collapse" data-target="#side-menu-certificates">
            <span class=""><span class="glyphicon glyphicon-align-justify"></span></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>

        <ul class="leftMenu list-unstyled collapse" id="side-menu-certificates">
            <li class="item header">@Html.ActionLink("CERTIFICATES", "AllCertificates", "Certificates")</li>
            <li class="item side-menu-h2">@Html.ActionLink("All Certificates", "AllCertificates", "Certificates")</li>
            <li class="item side-menu-h2">@Html.ActionLink("ABELDent", "AbelDent", "Certificates")</li>
            <li class="item side-menu-h2">@Html.ActionLink("Electrocardiogram", "Electrocardiogram", "Certificates")</li>
            <li class="item side-menu-h2">@Html.ActionLink("English Second Language", "EnglishSecondLanguage", "Certificates")</li>
            <li class="item side-menu-h2">@Html.ActionLink("English Skills - Healthcare Workers", "EnglishSkillsHealthcareWorkers", "Certificates")</li>
            <li class="item side-menu-h2">@Html.ActionLink("First Aid & CPR", "FirstAidCPR", "Certificates")</li>
            <li class="item side-menu-h2">@Html.ActionLink("Food Handler Safety", "FoodHandlerSafety", "Certificates")</li>
            <li class="item side-menu-h2">@Html.ActionLink("Intramuscular Injections", "IntramuscularInjections", "Certificates")</li>
            <li class="item side-menu-h2">@Html.ActionLink("Intro - Swedish Massage", "IntroductionSwedishMassage", "Certificates")</li>
            <li class="item side-menu-h2">@Html.ActionLink("Mental Health Addictions", "MentalHealthAddictions", "Certificates")</li>
            <li class="item side-menu-h2">@Html.ActionLink("Phlebotomy", "Phlebotomy", "Certificates")</li>
            <li class="item side-menu-h2">@Html.ActionLink("Urinalysis", "Urinalysis", "Certificates")</li>
            <li class="item side-menu-h2">@Html.ActionLink("Birth Doula Workshop", "BirthDoulaWorkshop", "Certificates")</li>

            <li class="item btn btn-brand btn-block spacer-top" id="askQuestion">Ask a Question</li>
            <li class="item btn btn-brand btn-block" id="requestCatalogue">Request Catalogue</li>
        </ul>
        <br />
        <!-- Medix Body VAA Panel -->
        <div class="panel panel-default">
            <div class="panel-heading">
                <h1 class="contentH1">Are You Career Training Ready? Find Out!</h1>
            </div>
            <div class="panel-body">
                <h1 class="contentH1"><a href="http://medix.virtualadmissions.com/?lead_src=w-body" target="_blank">Take the Medix Readiness Quiz Now!</a></h1></br>

                <a href="http://medix.virtualadmissions.com/?lead_src=w-body" target="_blank"><img class="img-responsive" src="~/Content/images/vaa.png" width="100%" /></a>
                <br />
                <p class="contentp">The fun, online quiz takes 3-minutes to complete and you will get a personalized report. Identify your strengths and social style plus the training and positions you are best suited for.</p>
                <a href="http://medix.virtualadmissions.com/?lead_src=w-body" target="_blank">Get Your Career Training Readiness score now</a>.
            </div>
        </div>

    </div>

    <div class="col-sm-9 pull-right">
        <div class="contentBody">
            <div class="row bodyHeaderWrapper">
                @ViewBag.BodyHeaderText
            </div>
            <div class="row">
                @RenderBody()
            </div>
        </div>
    </div>

    <div class="clearfix"></div>
</div>

<script>
    $(document).ready(function () {
        $('#applyOnline').click(function () {
            $('.popup-form-wrapper').hide();
            $('#applyNowWrapper').show();
            $('.form-overlay').slideDown()
        });

        $('#requestCatalogue').click(function () {
            $('.popup-form-wrapper').hide();
            $('#requestCatalogueWrapper').show();
            $('.form-overlay').slideDown()
        });

        $('#askQuestion').click(function () {
            $('.popup-form-wrapper').hide();
            $('#askQuestionWrapper').show();
            $('.form-overlay').slideDown()
        });
    });

    $(window).bind("pageshow", function () {
        var forms = $("form");
        forms.each(function (i) {
            forms[i].reset();
        });
    });
</script>
