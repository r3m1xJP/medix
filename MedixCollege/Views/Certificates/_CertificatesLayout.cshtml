@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    ViewBag.Title = "Certificates";
}

<div class="leftMenuWrapper col-lg-3 custom-collapse">
    <button class="btn-brand collapse-toggle visible-xs" type="button" data-toggle="collapse" data-parent="custom-collapse" data-target="#side-menu-certificates">
        <span class="">PROGRAMS</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
    </button>
    <button class="btn-brand collapse-toggle visible-xs" type="button" data-toggle="collapse" data-parent="custom-collapse" data-target="#side-menu-contact">
        <span class="">Contact Us</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
    </button>
    <button class="btn-brand collapse-toggle visible-xs" type="button" data-toggle="collapse" data-parent="custom-collapse" data-target="#side-menu-campuses">
        <span class="">CAMPUSES</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
    </button>
    <ul class="leftMenu list-unstyled collapse" id="side-menu-certificates">
        <li class="header">Certificates</li>
        <li class="item">@Html.ActionLink("All Certificates", "CertificatesContinuingEducation", "Certificates")</li>
        <li class="item">@Html.ActionLink("ABEL-Dent", "AbelDent", "Certificates")</li>
        <li class="item">@Html.ActionLink("Basic Wound Treatment", "BasicWoundTreatment", "Certificates")</li>
        <li class="item">@Html.ActionLink("Electrocardiogram", "Electrocardiogram", "Certificates")</li>
        <li class="item">@Html.ActionLink("Emotional First Aid", "EmotionalFirstAid", "Certificates")</li>
        <li class="item">@Html.ActionLink("English Second Language", "EnglishSecondLanguage", "Certificates")</li>
        <li class="item">@Html.ActionLink("English Skills - Healthcare Workers", "EnglishSkillsHealthcareWorkers", "Certificates")</li>
        <li class="item">@Html.ActionLink("First Aid & CPR", "FirstAidCPR", "Certificates")</li>
        <li class="item">@Html.ActionLink("Food Handler Safety", "FoodHandlerSafety", "Certificates")</li>
        <li class="item">@Html.ActionLink("Home Childcare Management", "HomeChildCareManagement", "Certificates")</li>
        <li class="item">@Html.ActionLink("Intramuscular Injections", "IntramuscularInjections", "Certificates")</li>
        <li class="item">@Html.ActionLink("Intro - Developmental Disabilities Services", "IntroductionDevelopmentalDisabilitiesServices", "Certificates")</li>
        <li class="item">@Html.ActionLink("Intro - Swedish Massage", "IntroductionSwedishMassage", "Certificates")</li>
        <li class="item">@Html.ActionLink("Mental Health Addictions", "MentalHealthAddictions", "Certificates")</li>
        <li class="item">@Html.ActionLink("Phlebotomy", "Phlebotomy", "Certificates")</li>
        <li class="item">@Html.ActionLink("Soft Tissue Back Injury Prevention", "SoftTissueBackInjuryPrevention", "Certificates")</li>
        <li class="item">@Html.ActionLink("Urinalysis", "Urinalysis", "Certificates")</li>
    </ul>
    <ul class="leftMenu list-unstyled collapse" id="side-menu-contact">
        <li class="header">Contact Medix</li>
        <li class="item" id="askQuestion">Ask a Question</li>
        <li class="item" id="requestCatalogue">Request Information</li>
        <li class="item" id="applyOnline">Apply Online</li>
    </ul>
    <ul class="leftMenu list-unstyled collapse" id="side-menu-campuses">
        <li class="header">Campuses</li>
        <li class="item">@Html.ActionLink("All Campuses", "Index", "Campuses")</li>
        <li class="item">@Html.ActionLink("Brampton", "Brampton", "Campuses")</li>
        <li class="item">@Html.ActionLink("Brantford", "Brantford", "Campuses")</li>
        <li class="item">@Html.ActionLink("Kitchener", "Kitchener", "Campuses")</li>
        <li class="item">@Html.ActionLink("London", "London", "Campuses")</li>
        <li class="item">@Html.ActionLink("Scarborough", "Scarborough", "Campuses")</li>
        <li class="item">@Html.ActionLink("Toronto", "Toronto", "Campuses")</li>
    </ul>
</div>
<div class="col-lg-9">
    <div class="contentHeader">
        CERTIFICATES
    </div>
    <div class="contentBody">
        @RenderBody()
    </div>
</div>
<div class="clearfix"></div>

<script>
    $(document).ready(function () {
        $('#applyOnline').click(function () {
            $('.popup-form-wrapper').hide();
            $('#applyNowWrapper').show();
            $('.form-overlay').slideDown()
        });

        $('#requestCatalogue').click(function () {
            $('.popup-form-wrapper').hide();
            $('#requestCatalogueWrapper').show();
            $('.form-overlay').slideDown()
        });

        $('#askQuestion').click(function () {
            $('.popup-form-wrapper').hide();
            $('#askQuestionWrapper').show();
            $('.form-overlay').slideDown()
        });
    });
</script>
